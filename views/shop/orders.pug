extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if orders.length > 0
      ul
        each o in orders
          li
            h1 ##{o._id}
            ul
              each product in o.items
                li
                  p #{product.title} (#{product.quantity})
    else
      h1 Nothing there!