extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if orders.length > 0
      ul
        each o in orders
          li
            h1 ##{o._id}
            ul
              each p in o.products
                li
                  p #{p.product.title} (#{p.quantity})
    else
      h1 Nothing there!